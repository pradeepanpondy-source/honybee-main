rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own seller application documents
    match /sellerApplications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow authenticated users to read and write their own orders (for future use)
    match /orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.sellerId;
    }
    // Allow authenticated users to read and write the profile document
    match /profile/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
